<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_exerciseListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.longlife.workoutlogger.view.ExerciseListItemActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_exerciseListItem_description"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:ellipsize="end"
            android:text="An exercise"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/button_editExercise"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/image_exerciseListItem_icon"
            app:layout_constraintTop_toBottomOf="@+id/text_exerciseListItem_name" />

        <TextView
            android:id="@+id/text_exerciseListItem_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Last Performed on 10/10/2010"
            android:textColor="@color/subheaderText"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/button_editExercise"
            app:layout_constraintStart_toEndOf="@+id/image_exerciseListItem_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_editExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/text_EditExercise"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_exerciseListItem_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/exercise_48dp_xhdpi" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
