<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longlife.workoutlogger.view.RoutineActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/a_expRecycler_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:childDivider="#00000000"
        android:clipToPadding="false"
        android:descendantFocusability="afterDescendants"
        android:divider="@color/BLUE"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:overScrollMode="never"
        android:paddingBottom="300dp"
        android:scrollbarStyle="outsideOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a_expRecycler_exercises"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/a_expRecycler_exercises"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>
